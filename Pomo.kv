<PomoLayout>:


    displayLabel:displayLabel
    main_btn:main_btn
    reset:reset

    Label:
        text: "Test Pomodoro App"
        center_x: root.width/2
        top:root.top

    Label:
        id:displayLabel
        text: root.default_display()
        font_size: 100
        center_x:root.width/2
        center_y:root.height/1.5

    BoxLayout:

        height: 50
        width: root.width/2
        center_x: root.width/2
        center_y: root.height/5
        spacing: 20

        Button:
            text: 'Break'
            background_color: 0, 1, 2, 1
            on_press: root.break_button()

        Button:
            id: main_btn
            text: 'Start'
            background_color: 0, 1, 0, 1
            on_press: root.start_button()

        Button:
            id: reset
            text: 'Stop/Reset'
            background_color: 1, 0, 0, 1
            disabled: True
            on_press: root.reset_button()
#: import main main
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

<Timer>:
    displayLabel:displayLabel
    cycleLabel:cycleLabel
    statusLabel:statusLabel
    main_btn:main_btn
    reset:reset
    
    canvas.before:
        Color:
            rgba: 245/255, 245/255, 245/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        orientation: 'vertical'
        

        size: self.parent.size
        pos: self.parent.pos 

        ActionBar:
            background_image: 'Resources/white-bg.png'
            background_color: 30/255, 144/255, 255/255, 1
            ActionView:
                ActionPrevious:
                    title: 'Pomodoro App'
                    with_previous: False 
                ActionOverflow:
                    ActionButton:
                        text: "Settings"
                        on_release: app.open_settings()

                    ActionButton:
                        text: "Tasks"
                        on_release: app.root.current = "tasks"
                        
                    ActionButton:
                        text: "Statistics"

                    ActionButton:
                        text: "About"

        Label:
            id:displayLabel
            text: root.time_convert()
            font_size: 100
            color: 30/255, 144/255, 255/255, 1

        Label:
            id: statusLabel
            text: 'Status: ' + root.sequence[root.cycle] 
            color: 30/255,144/255,255/255,1

        Label:
            text: 'Task goes here'
            color: 30/255, 144/255, 255/255,1

        Label:
            id: cycleLabel
            text: 'Completed Cycles: 0/4'
            color: 30/255, 144/255, 255/255,1
            font_color: ''
        
        ## KIVY MAIN BUTTONS
        BoxLayout:

            size: 210, 70
            size_hint: None, None
            pos: 200,200

            Button:

                on_release: root.break_button(), root.timer_alarm.stop()
                background_normal: './Resources/skip_test.png'
                background_down: './Resources/skip_test.png'

            Button:
                id: main_btn

                pos: 200, 200

                on_release: root.start_button(), root.timer_alarm.stop()
                background_normal: './Resources/test.png'
                background_down: './Resources/test.png'


            Button:
                id: reset

                disabled: True
                on_release: root.reset_button(), root.timer_alarm.stop()
                background_disabled_normal: ''
                background_normal: './Resources/skip_test.png'
                background_down: './Resources/test.png'

###########################################################################
<TaskLayout>:
    orientation: "vertical"
    task_input: task_input_view
    task_list: tasks_list_view

    canvas.before:
        Color:
            rgba: 245/255, 245/255, 245/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_y: .1
        height: "10dp"

        TextInput:
            id: task_input_view
            font_size: 20
            size_hint_x: 70
            multiline: False
            

        Button:
        
            text: "Add"
            on_release: root.add_task()
            size_hint_x: 15

        Button:
            text: "Del"
            on_release: root.del_task()
            size_hint_x: 15

    ListView:
        id: tasks_list_view
        adapter:
            ListAdapter(data=[], cls=main.TaskButton)

#########################################################################
Manager:
    TimerScreen:
    TaskScreen:
###########################################################################
<TimerScreen>:
    name: "timer"
    Timer
###################################################################################

<TaskScreen>:
    name: "tasks"
    
    TaskLayout
        pos_hint: {'top':.92}

    ActionBar:
        background_image: 'Resources/white-bg.png'
        background_color: 30/255, 144/255, 255/255, 1
        pos_hint: {'top':1}
        ActionView:
            ActionPrevious:
                title: 'Tasks'
                with_previous: False 

            ActionButton:
                text: 'Back'
                on_press: root.manager.current = "timer"

            ActionOverflow:
                ActionButton:
                    text: "Settings"
                    on_press: app.open_settings()
                    
                ActionButton:
                    text: "Statistics"

                ActionButton:
                    text: "About"

##################################################################################        


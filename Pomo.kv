#: import main main
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter

<Timer>:
    displayLabel:displayLabel
    cycleLabel:cycleLabel
    statusLabel:statusLabel
    main_btn:main_btn
    reset:reset

    BoxLayout:   
        height: 50
        width: root.width
        top: root.top
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Pomodoro App'
                    with_previous: False 
                ActionOverflow:
                    ActionButton:
                        text: "Settings"
                        on_release: app.open_settings()

                    ActionButton:
                        text: "Tasks"
                        on_release: app.root.current = "tasks"
                        
                    ActionButton:
                        text: "Statistics"

                    ActionButton:
                        text: "About"


    Label:
        text: 'Task goes here'
        center_x: root.width/2
        top:root.top/2

    Label:
        id: cycleLabel
        text: 'Completed Cycles: 0/4'
        center_x: root.width/1.15
        center_y: root.top * 0.85
        
    Label:
        id: statusLabel
        text: 'Status: ' + root.sequence[root.cycle] 
        center_x: root.width/2
        top:root.top/1.5

    Label:
        id:displayLabel
        text: root.time_convert()
        font_size: 100
        center_x:root.width/2
        center_y:root.height/1.5

    BoxLayout:

        height: 50
        width: root.width/2
        center_x: root.width/2
        center_y: root.height/5
        spacing: 20


        Button:
            text: 'Skip'
            background_color: 0, 1, 2, 1
            on_release: root.break_button(), root.timer_alarm.stop()

        Button:
            id: main_btn
            text: 'Start'
            background_color: 0, 1, 0, 1
            on_release: root.start_button(), root.timer_alarm.stop()

        Button:
            id: reset
            text: 'Stop/Reset'
            background_color: 1, 0, 0, 1
            disabled: True
            on_release: root.reset_button(), root.timer_alarm.stop()

###########################################################################
<TaskLayout>:
    orientation: "vertical"
    task_input: task_input_view
    task_list: tasks_list_view

    BoxLayout:
        size_hint_y: .1
        height: "10dp"

        TextInput:
            id: task_input_view
            font_size: 20
            size_hint_x: 70
            multiline: False
            

        Button:
            text: "Add"
            on_release: root.add_task()
            size_hint_x: 15

        Button:
            text: "Del"
            on_release: root.del_task()
            size_hint_x: 15

    ListView:
        id: tasks_list_view
        adapter:
            ListAdapter(data=[], cls=main.TaskButton)

#########################################################################
Manager:
    TimerScreen:
    TaskScreen:
###########################################################################
<TimerScreen>:
    name: "timer"
    Timer
###################################################################################

<TaskScreen>:
    name: "tasks"
    
    TaskLayout
        pos_hint: {'top':.92}

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            ActionPrevious:
                title: 'Tasks'
                with_previous: False 

            ActionButton:
                text: 'Back'
                on_press: root.manager.current = "timer"

            ActionOverflow:
                ActionButton:
                    text: "Settings"
                    on_press: app.open_settings()
                    
                ActionButton:
                    text: "Statistics"

                ActionButton:
                    text: "About"

##################################################################################        


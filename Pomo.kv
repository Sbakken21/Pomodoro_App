<PomoLayout>:


    displayLabel:displayLabel

    Label:
        text: "Test Pomodoro App"
        center_x: root.width/2
        top:root.top

    Label:
        id:displayLabel
        text: root.default_display()
        font_size: 200
        center_x:root.width/2
        center_y:root.height/1.5

    BoxLayout:

        height: 50
        width: root.width/2
        center_x: root.width/2
        center_y: root.height/5
        spacing: 20

        Button:
            text: 'Start'
            background_color: 0, 1, 0, 1
            on_press: root.start_button()

        Button:
            text: 'Stop'
            background_color: 1, 0, 0, 1
            on_press: root.stop_button()

        Button:
            text: 'Reset'
            on_press: root.reset_button()